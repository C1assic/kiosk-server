extends layout

block content
  div.section
  div.section
  main
    center
      div.container
        div(class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;")
          form.col.s12(method="post")
            div.row
              div.col.s12
            div.row
              div.input-field.col.s12
                input.validate(type='text' name='username' id='username')
                label(for='username') Введите логин

            div.row
              div.input-field.col.s12
                input.validate(type='password' name='password' id='password')
                label(for='password') Введите пароль
            br
            center
              div.row
                button(type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo') Войти
  div.section
  div.section

block head
  link(rel='stylesheet', href='/admin/loginForm.css')
  script.  
    window.addEventListener('load', async function() {
      document.querySelector('.main-loader').classList.add('hide')
    })